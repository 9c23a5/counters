<p style="color: green"><%= notice %></p>

<%= render @counter %>

<div>
  <%= link_to "Edit this counter", edit_counter_path(@counter) %> |
  <%= link_to "Back to counters", counters_path %>

  <div>
  <%= button_to '+1', increment_counter_path(@counter), method: :patch %>
  <%= button_to 'Reset', reset_counter_path(@counter), method: :patch %>
  </div>

  <hr>

  <%= button_to "Destroy this counter", @counter, method: :delete %>
</div>
